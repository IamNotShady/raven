<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- application name -->
    <dubbo:application name="api-service"  />

    <!-- dubbo registry -->
    <dubbo:registry id="zookeeper" protocol="zookeeper" address="${dubbo.registry.address}" />

    <!-- consumer -->
    <dubbo:reference id="msgService" interface="com.raven.common.dubbo.MessageService"
                     check="false" version="1.0" url="" registry="zookeeper" protocol="dubbo" timeout="15000"/>

    <dubbo:reference id="accessService" interface="com.raven.common.dubbo.AccessService"
                     check="false" version="1.0" url="" registry="zookeeper" protocol="dubbo" timeout="15000" loadbalance="consistenthash"/>
</beans>