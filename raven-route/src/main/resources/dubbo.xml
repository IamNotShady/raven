<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="route-service"  />

    <!-- dubbo registry -->
    <dubbo:registry id="zookeeper" protocol="zookeeper" address="${dubbo.registry.address}" />

    <!-- providers -->
    <dubbo:service interface="com.raven.common.dubbo.MessageService" ref="msgService" version="1.0" registry="zookeeper"/>

    <!-- consumers-->
    <dubbo:reference id="outService" interface="com.raven.common.dubbo.AccessService"
                     check="false" version="1.0" url="" registry="zookeeper" protocol="dubbo" timeout="15000" loadbalance="consistenthash"/>
</beans>